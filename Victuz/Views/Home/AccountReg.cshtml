@model Victuz.Models.Viewmodels.RegisterVM

@{
    ViewData["Title"] = "Login Page";
}

<!DOCTYPE html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Victuz</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="login-body">
        <div class="login-container">
            <h1>Aanmelden</h1>
            <form class="login-form">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="login-form-group">
                    <label asp-for="UserName">Gebruikersnaam</label>
                    <input asp-for="UserName">
                </div>
                <div class="login-form-group">
                    <label asp-for="Password">Wachtwoord</label>
                    <input asp-for="Password">
                </div>
                <div class="login-form-group">
                    <label asp-for="ConfirmPassword">Bevestig wachtwoord</label>
                    <input asp-for="ConfirmPassword">
                </div>
                <div class="login-form-group">
                    <label asp-for="RoleId" class="control-label">Rol</label>
                    <select asp-for="RoleId" class="form-control" asp-items="ViewBag.RoleId"></select>
                    @* <label for="Role">Rol</label>
                    <select id="role" name="role" required>
                        <option value="" disabled selected>Kies een rol</option> <!-- Placeholder -->
                        <option value="user">User</option>
                    </select> *@
                </div>
                <button type="submit" value="Create" class="custom-btn">Aanmelden</button>
            </form>
        </div>
    </div>
</body>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
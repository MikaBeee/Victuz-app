<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Victuz</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Victuz.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-navbar border-bottom box-shadow mb-3 ">
            <div class="container-fluid">
                <a class="navbar-brand text-white font" asp-area="" asp-controller="Home" asp-action="Index">Victuz</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Gatherings" asp-action="AllGatherings">Activiteiten</a>
                        </li>
                        <li class="nav-item font">
                            <a class="nav-link text-white" asp-area="" asp-controller="Forums" asp-action="AllForums">Forum</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="MeldJeAanPage">Meld je aan!</a>
                        </li>
                        @if (User.IsInRole("admin"))
                        {
                            <li class="nav-item font">
                                <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Dashboard">Dashboard</a>
                            </li>
                        }
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item font">
                                <form asp-controller="Users" asp-action="Logout" method="post" style="display: inline;">
                                    <button type="submit" class="nav-link text-white bg-transparent border-0" onclick="return confirm('Weet u zeker dat u wilt uitloggen?');">
                                        Uitloggen
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item font">
                                <a class="nav-link text-white" asp-area="" asp-controller="Users" asp-action="Login">Log in</a>
                            </li>
                        }
                        <li class="nav-item font ms-auto" >
                            @if (User.Identity.IsAuthenticated)
                            {
                                <a class="nav-link text-white bg-transparent border-0">Welkom, @User.Identity.Name!</a>
                            }
                        </li>


                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main> 
    </div>
    <footer style="background-color: #6C8A8D; color: #ffffff; padding: 2rem; text-align: center;">
        <div style="max-width: 800px; margin: 0 auto;">
            <!-- Logo van Zuyd, gecentreerd en licht verkleind -->
            <img src="~/images/ZuydLogo.png" alt="Zuyd Logo" style="width: 80px; height: auto; margin-bottom: 1rem;">

            <p style="font-size: 1.1rem; margin: 0;">
                <strong>Locatie:</strong> Hogeschool Zuyd, Heerlen
            </p>

            <p style="font-size: 0.9rem; color: #e0e0e0; margin: 0.5rem 0;">
                Nieuw Eyckholt 300, 6419 DJ Heerlen
            </p>

            <hr style="border: 0; height: 1px; background-color: #ffffff; opacity: 0.5; margin: 1.5rem 0;">

            <div>
                <p style="margin: 0; font-size: 1.2rem;"><strong>Sponsoren van Victuz:</strong></p>
                <ul style="list-style-type: none; padding: 0; margin: 0.5rem 0;">
                    <li style="margin: 0.5rem 0;">Sponsor 1 - Bedrijfsnaam</li>
                    <li style="margin: 0.5rem 0;">Sponsor 2 - Bedrijfsnaam</li>
                    <li style="margin: 0.5rem 0;">Sponsor 3 - Bedrijfsnaam</li>
                    <li style="margin: 0.5rem 0;">Sponsor 4 - Bedrijfsnaam</li>
                </ul>
            </div>

            <p style="font-size: 0.9rem; color: #f0f0f0; margin-top: 1rem;">
                &copy; 2024 Studievereniging Victuz. Alle rechten voorbehouden.
            </p>
        </div>
    </footer>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

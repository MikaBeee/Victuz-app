@model Victuz.Models.Businesslayer.Gathering


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
</head>
<body>

<h3>Bent u er zeker van dat u deze activiteit wilt verwijderen?</h3>
<div>

    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Titel
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GatheringTitle)
        </dd>
        <dt class = "col-sm-2">
            Beschrijving
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GatheringDescription)
        </dd>
        <dt class = "col-sm-2">
            Max deelnemers
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MaxParticipants)
        </dd>
        <dt class = "col-sm-2">
            Datum en tijd
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class = "col-sm-2">
            Locatie
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Location.LocName)
        </dd>
        <dt class = "col-sm-2">
            Categorie
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category.CatName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="GatheringId" />
        <input type="submit" value="Verwijderen" class="btn btn-danger" />
        <a asp-action="Index">Annuleren</a>
    </form>
</div>
</body>
</html>

@model IEnumerable<Victuz.Models.Businesslayer.Category>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
        <a class="custom-btn button-creme no-underline text-black fw-bold" asp-controller="Categories" asp-action="Create">Aanmaken</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                Categorie naam
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CatName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CatId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CatId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CatId">Delete</a>
            </td>
        </tr>
}
    </tbody>

</table>

<a href="/Home/Dashboard">Terug naar dashboard</a>